[package]
name = "{{project-name}}"
version = "0.1.0"
edition = "2024"

[features]
default = []
tokio_console = ["tracing-kickstart/tokio_console"]

[dependencies]
aide = { version = "0.15.0", features = ["axum", "axum-json", "axum-query", "axum-tokio", "macros", "swagger"] }
async-shutdown = "0.2.2"
axum = { version = "0.8.4", features = ["macros", "query"] }
chrono = { version = "0.4.41", features = ["serde"] }
color-eyre = "0.6.5"
config = "0.15.11"
dotenvy = "0.15.7"
schemars = { version = "0.9.0", features = ["chrono", "uuid1"] }
secrecy = { version = "0.10.3", features = ["serde"] }
serde = { version = "1.0.219", features = ["derive"] }
serde_json = "1.0.140"
serde_with = { version = "3.13.0", features = ["chrono_0_4"] }
{%- if db_support %}
sqlx = { version = "0.8.6", features = [
    "chrono",
    "json",
    "macros",
    "postgres",
    "runtime-tokio",
    "runtime-tokio-native-tls",
    "uuid"
] }
{% endif -%}
strum = "0.27.1"
strum_macros = "0.27.1"
thiserror = "2.0.12"
tokio = { version = "1.45.1", features = ["full", "tracing"] }
tower = { version = "0.5.2", features = ["util", "timeout"] }
tower-http = { version = "0.6.6", features = ["cors", "timeout", "trace"] }
tracing = "0.1.41"
tracing-kickstart = "0.3.1"
url = { version = "2.5.4", features = ["serde"] }
uuid = { version = "1.17.0", features = ["serde", "v4"] }
validator = { version = "0.20.0", features = ["derive"] }
